{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*.ts"]
}